@model List<FirstWebApplication.Entities.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Manage Users</h1>
            <p class="text-gray-600 mt-2">View and manage user accounts and roles</p>
        </div>
        <a asp-action="AdminDashboard" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
            ← Back to Dashboard
        </a>
    </div>

    <!-- Role Filter -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-6">
        <div class="flex items-center gap-4">
            <label class="font-medium text-gray-700">Filter by Role:</label>
            <div class="flex gap-2">
                <a asp-action="AdminUsers" asp-route-roleFilter="all"
                   class="px-4 py-2 rounded-lg transition @(ViewBag.CurrentFilter == "all" || ViewBag.CurrentFilter == null ? "bg-indigo-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    All Users
                </a>
                <a asp-action="AdminUsers" asp-route-roleFilter="Pilot"
                   class="px-4 py-2 rounded-lg transition @(ViewBag.CurrentFilter == "Pilot" ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Pilots
                </a>
                <a asp-action="AdminUsers" asp-route-roleFilter="Registerfører"
                   class="px-4 py-2 rounded-lg transition @(ViewBag.CurrentFilter == "Registerfører" ? "bg-green-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Registerfører
                </a>
                <a asp-action="AdminUsers" asp-route-roleFilter="Admin"
                   class="px-4 py-2 rounded-lg transition @(ViewBag.CurrentFilter == "Admin" ? "bg-purple-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Admins
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @TempData["Error"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Email
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Roles
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var user in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@user.Email</div>
                            </td>
                            <td class="px-6 py-4">
                                @if (userRoles != null && userRoles.ContainsKey(user.Id))
                                {
                                    <div class="flex flex-wrap gap-2">
                                        @foreach (var role in userRoles[user.Id])
                                        {
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full
                                                @(role == "Admin" ? "bg-purple-100 text-purple-800" :
                                                  role == "Registerfører" ? "bg-green-100 text-green-800" :
                                                  "bg-blue-100 text-blue-800")">
                                                @role
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-sm text-gray-500 italic">No roles</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-3">
                                <a asp-action="AdminManageUser" asp-route-id="@user.Id" 
                                   class="text-indigo-600 hover:text-indigo-900">
                                    Manage Roles
                                </a>
                                @if (user.Email != User.Identity?.Name)
                                {
                                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" 
                                          class="inline" 
                                          onsubmit="return confirm('Delete user @user.Email? This action cannot be undone.');">
                                        <button type="submit" class="text-red-600 hover:text-red-800 font-medium">
                                            Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 text-gray-600 text-sm">
            Total users: <strong>@Model.Count()</strong>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <p class="text-gray-600">No users found.</p>
        </div>
    }
</div>
