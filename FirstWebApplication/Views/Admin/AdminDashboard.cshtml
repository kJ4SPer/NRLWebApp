@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="py-10 bg-gray-50 min-h-screen">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900">Admin Dashboard</h1>
            <p class="mt-4 text-xl text-gray-500">Enkel administrasjon av brukere</p>
        </div>

        @* 2x1 Grid - Sentrert og stort *@
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            @* 1. GODKJENNINGER *@
            <a asp-action="AdminPendingUsers" class="block group h-full">
                <div class="bg-white shadow-lg rounded-2xl p-8 border-l-8 border-yellow-400 hover:shadow-xl transition-all transform hover:-translate-y-1 h-full flex flex-col items-center text-center">
                    <div class="bg-yellow-100 p-4 rounded-full mb-4">
                        <svg class="h-10 w-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Godkjenninger</h3>
                    <p class="text-gray-600 mb-4">Du har <span class="font-bold text-yellow-600">@ViewBag.PendingCount</span> ventende søknader.</p>
                    <span class="mt-auto text-yellow-600 font-semibold group-hover:underline">Gå til innboks &rarr;</span>
                </div>
            </a>

            @* 2. BRUKERADMINISTRASJON *@
            <a asp-action="AdminUsers" class="block group h-full">
                <div class="bg-white shadow-lg rounded-2xl p-8 border-l-8 border-blue-500 hover:shadow-xl transition-all transform hover:-translate-y-1 h-full flex flex-col items-center text-center">
                    <div class="bg-blue-100 p-4 rounded-full mb-4">
                        <svg class="h-10 w-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Alle Brukere</h3>
                    <p class="text-gray-600 mb-4">Administrer @ViewBag.TotalUsers eksisterende brukere.</p>
                    <span class="mt-auto text-blue-600 font-semibold group-hover:underline">Se liste &rarr;</span>
                </div>
            </a>

        </div>
    </div>
</div>