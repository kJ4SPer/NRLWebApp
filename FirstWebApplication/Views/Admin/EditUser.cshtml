@model FirstWebApplication.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Rediger Bruker";
}

<div class="py-10 bg-gray-50 min-h-screen flex justify-center">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-8">

        <h2 class="text-2xl font-bold text-gray-900 mb-6">Rediger Bruker</h2>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Fornavn</label>
                    <input asp-for="Fornavn" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Etternavn</label>
                    <input asp-for="Etternavn" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">E-post</label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Organisasjon</label>
                    <select asp-for="OrganisasjonId" asp-items="ViewBag.Organisasjoner" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2">
                        <option value="">-- Ingen --</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Rolle</label>
                    <select asp-for="CurrentRole" asp-items="ViewBag.Roles" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2">
                    </select>
                </div>
            </div>

            <div class="mt-8 flex justify-between">
                <a asp-action="AdminUsers" class="text-gray-600 hover:text-gray-900 font-medium py-2">Avbryt</a>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded shadow">Lagre Endringer</button>
            </div>
        </form>

        <hr class="my-6 border-gray-200" />

        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Er du sikker på at du vil slette denne brukeren? Dette kan ikke angres.');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="w-full text-red-600 hover:text-red-800 text-sm font-medium">Slett bruker</button>
        </form>

    </div>
</div>