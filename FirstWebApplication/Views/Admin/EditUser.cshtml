@model FirstWebApplication.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Rediger Bruker";
}

<div class="py-10 bg-gray-50 dark:bg-gray-900 min-h-screen flex justify-center transition-colors duration-300">
    <div class="w-full max-w-lg bg-white dark:bg-gray-800 shadow-lg rounded-lg p-8 border border-gray-200 dark:border-gray-700">

        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Rediger Bruker</h2>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Fornavn</label>
                    <input asp-for="Fornavn" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Etternavn</label>
                    <input asp-for="Etternavn" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">E-post</label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-900 text-gray-500 dark:text-gray-400 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2 cursor-not-allowed" readonly />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Organisasjon</label>
                    <select asp-for="OrganisasjonId" asp-items="ViewBag.Organisasjoner" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2">
                        <option value="">-- Ingen --</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Rolle</label>
                    <select asp-for="CurrentRole" asp-items="ViewBag.Roles" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2">
                    </select>
                </div>
            </div>

            <div class="mt-8 flex justify-between items-center">
                <a asp-action="AdminUsers" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white font-medium py-2">Avbryt</a>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white font-bold py-2 px-6 rounded shadow transition-colors">Lagre Endringer</button>
            </div>
        </form>

        <hr class="my-6 border-gray-200 dark:border-gray-700" />

        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Er du sikker på at du vil slette denne brukeren? Dette kan ikke angres.');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="w-full text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 text-sm font-medium transition-colors">Slett bruker</button>
        </form>

    </div>
</div>