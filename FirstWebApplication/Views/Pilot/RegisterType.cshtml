@{
    ViewData["Title"] = "Choose Registration Type";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/pilot/registertype.css" asp-append-version="true" />
}

<!-- Map background -->
<div class="register-type-container">
    <div id="register-type-map"></div>
</div>

<!-- Overlay with registration options -->
<div class="register-overlay">
    <div class="options-container">
        <!-- Quick Register Option -->
        <a href="@Url.Action("QuickRegister", "Pilot")" class="option-box quick">
            <div class="icon">‚ö°</div>
            <h2>Quick Register</h2>
            <p>Register your current location instantly. Perfect when you're on the go and need to report an obstacle quickly.</p>
            <span class="btn">Quick Register</span>
        </a>

        <!-- Full Register Option -->
        <a href="@Url.Action("FullRegister", "Pilot")" class="option-box full">
            <div class="icon">üìù</div>
            <h2>Full Register</h2>
            <p>Complete detailed registration with all obstacle information. Choose your location on the map and fill in all details.</p>
            <span class="btn">Full Register</span>
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/pilot/registertype.js" asp-append-version="true"></script>
}
