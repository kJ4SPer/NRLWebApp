@using FirstWebApplication.Helpers
@using System.Globalization
@model FirstWebApplication.Models.Obstacle.MyRegistrationsViewModel

@{
    ViewData["Title"] = "My Registrations";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">My Registrations</h1>
        <p class="text-gray-600 mt-2">Manage your obstacle registrations</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded">
            <p class="text-yellow-800 font-semibold">Incomplete</p>
            <p class="text-3xl font-bold text-yellow-900">@Model.IncompleteCount</p>
        </div>
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
            <p class="text-blue-800 font-semibold">Pending Review</p>
            <p class="text-3xl font-bold text-blue-900">@Model.PendingCount</p>
        </div>
        <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded">
            <p class="text-green-800 font-semibold">Approved</p>
            <p class="text-3xl font-bold text-green-900">@Model.ApprovedCount</p>
        </div>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
            <p class="text-red-800 font-semibold">Rejected</p>
            <p class="text-3xl font-bold text-red-900">@Model.RejectedCount</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 p-4 bg-green-100 border-l-4 border-green-500 text-green-700">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 bg-red-100 border-l-4 border-red-500 text-red-700">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.IncompleteQuickRegs.Any())
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">‚ö†Ô∏è Incomplete Quick Registrations</h2>
            <p class="text-gray-600 mb-4">You have <strong>@Model.IncompleteCount</strong> incomplete quick registration(s).</p>

            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-yellow-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var quickReg in Model.IncompleteQuickRegs)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">#@quickReg.Id</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @{
                                        string displayLoc = "Ukjent";
                                        if (!string.IsNullOrEmpty(quickReg.Location))
                                        {
                                            if (quickReg.Location.Contains("POINT"))
                                            {
                                                var coords = quickReg.Location.Replace("POINT(", "").Replace(")", "").Split(' ');
                                                if (coords.Length == 2)
                                                {
                                                    displayLoc = $"üìç {double.Parse(coords[1], CultureInfo.InvariantCulture):F4}, {double.Parse(coords[0], CultureInfo.InvariantCulture):F4}";
                                                }
                                            }
                                            else if (quickReg.Location.Contains("LINESTRING"))
                                            {
                                                displayLoc = "üìè Linjeobjekt";
                                            }
                                        }
                                    }
                                    @displayLoc
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">@quickReg.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="px-6 py-4 text-sm font-medium">
                                    <a asp-action="CompleteQuickRegister" asp-route-id="@quickReg.Id" class="text-blue-600 hover:text-blue-900 mr-4">‚úèÔ∏è Complete</a>
                                    <form asp-action="DeleteRegistration" asp-route-id="@quickReg.Id" method="post" class="inline delete-form">
                                        <button type="submit" class="text-red-600 hover:text-red-900">üóëÔ∏è Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (Model.PendingObstacles.Any())
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">‚è≥ Pending Review</h2>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-blue-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Height</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var obstacle in Model.PendingObstacles)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">#@obstacle.Id</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@(obstacle.Type ?? "N/A")</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@obstacle.Name</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @{
                                        string displayLoc = "N/A";
                                        if (!string.IsNullOrEmpty(obstacle.Location))
                                        {
                                            if (obstacle.Location.Contains("POINT"))
                                            {
                                                var coords = obstacle.Location.Replace("POINT(", "").Replace(")", "").Split(' ');
                                                if (coords.Length == 2)
                                                {
                                                    displayLoc = $"üìç {double.Parse(coords[1], CultureInfo.InvariantCulture):F4}, {double.Parse(coords[0], CultureInfo.InvariantCulture):F4}";
                                                }
                                            }
                                            else if (obstacle.Location.Contains("LINESTRING"))
                                            {
                                                displayLoc = "üìè Linjeobjekt";
                                            }
                                        }
                                    }
                                    @displayLoc
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">@obstacle.Height.ToString("F2") m</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@obstacle.RegisteredDate.ToString("dd.MM.yyyy")</td>
                                <td class="px-6 py-4 text-sm font-medium">
                                    <a asp-action="Overview" asp-route-id="@obstacle.Id" class="text-blue-600 hover:text-blue-900 mr-4">üëÅÔ∏è View</a>
                                    <form asp-action="DeleteRegistration" asp-route-id="@obstacle.Id" method="post" class="inline delete-form">
                                        <button type="submit" class="text-red-600 hover:text-red-900">üóëÔ∏è Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (Model.ApprovedObstacles.Any())
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">‚úÖ Approved</h2>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-green-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Height</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Approved By</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var obstacle in Model.ApprovedObstacles)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">#@obstacle.Id</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@(obstacle.Type ?? "N/A")</td>
                                <td class="px-6 py-4 text-sm text-gray-900">@obstacle.Name</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @{
                                        string displayLoc = "N/A";
                                        if (!string.IsNullOrEmpty(obstacle.Location))
                                        {
                                            if (obstacle.Location.Contains("POINT"))
                                            {
                                                var coords = obstacle.Location.Replace("POINT(", "").Replace(")", "").Split(' ');
                                                if (coords.Length == 2)
                                                {
                                                    displayLoc = $"üìç {double.Parse(coords[1], CultureInfo.InvariantCulture):F4}, {double.Parse(coords[0], CultureInfo.InvariantCulture):F4}";
                                                }
                                            }
                                            else if (obstacle.Location.Contains("LINESTRING"))
                                            {
                                                displayLoc = "üìè Linjeobjekt";
                                            }
                                        }
                                    }
                                    @displayLoc
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">@obstacle.Height.ToString("F2") m</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@(obstacle.ProcessedBy ?? "N/A")</td>
                                <td class="px-6 py-4 text-sm font-medium">
                                    <a asp-action="Overview" asp-route-id="@obstacle.Id" class="text-blue-600 hover:text-blue-900">üëÅÔ∏è View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (Model.RejectedObstacles.Any())
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">‚ùå Rejected</h2>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-red-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Rejected By</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Reason</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var obstacle in Model.RejectedObstacles)
                        {
                        <td class="px-6 py-4 text-sm text-gray-600">
                            @{
                                string displayLoc = "Ukjent";
                                if (!string.IsNullOrEmpty(obstacle.Location))
                                {
                                    if (obstacle.Location.Contains("POINT"))
                                    {
                                        var coords = obstacle.Location.Replace("POINT(", "").Replace(")", "").Split(' ');
                                        if (coords.Length == 2)
                                        {
                                            displayLoc = $"üìç {double.Parse(coords[1], CultureInfo.InvariantCulture):F4}, {double.Parse(coords[0], CultureInfo.InvariantCulture):F4}";
                                        }
                                    }
                                    else if (obstacle.Location.Contains("LINESTRING"))
                                    {
                                        // Hent f√∏rste punkt i linjen for √• vise "Start: ..."
                                        var raw = obstacle.Location.Replace("LINESTRING(", "").Replace(")", "");
                                        var firstPair = raw.Split(',')[0].Trim().Split(' ');
                                        if (firstPair.Length == 2)
                                        {
                                            var lat = double.Parse(firstPair[1], CultureInfo.InvariantCulture);
                                            var lon = double.Parse(firstPair[0], CultureInfo.InvariantCulture);
                                            displayLoc = $"üìè Linje (Start: {lat:F3}, {lon:F3})";
                                        }
                                        else
                                        {
                                            displayLoc = "üìè Linjeobjekt";
                                        }
                                    }
                                }
                            }
                            @displayLoc
                        </td>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (!Model.IncompleteQuickRegs.Any() && !Model.PendingObstacles.Any() && !Model.ApprovedObstacles.Any() && !Model.RejectedObstacles.Any())
    {
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <p class="text-gray-600 text-lg">You haven't registered any obstacles yet.</p>
            <a asp-action="RegisterType" class="mt-4 inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                Register Your First Obstacle
            </a>
        </div>
    }
</div>

@section Scripts {
    <script @Html.Raw(Html.NonceAttribute())>
        // Handle delete confirmation (CSP-compliant)
        document.addEventListener('DOMContentLoaded', function () {
            const deleteForms = document.querySelectorAll('.delete-form');
            deleteForms.forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!confirm('Delete this registration?')) {
                        event.preventDefault();
                    }
                });
            });
        });
    </script>
}