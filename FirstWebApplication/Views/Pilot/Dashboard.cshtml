@{
    ViewData["Title"] = "Pilot Dashboard";
}

<div class="container mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Welcome, Pilot!</h1>
            <p class="text-gray-600 mt-2">Logged in as: <strong>@User.Identity?.Name</strong></p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                @TempData["Message"]
            </div>
        }

        <!-- My Statistics -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">My Registration Statistics</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded">
                    <p class="text-yellow-800 font-semibold">Incomplete</p>
                    <p class="text-3xl font-bold text-yellow-900">@ViewBag.IncompleteCount</p>
                </div>
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
                    <p class="text-blue-800 font-semibold">Pending</p>
                    <p class="text-3xl font-bold text-blue-900">@ViewBag.PendingCount</p>
                </div>
                <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded">
                    <p class="text-green-800 font-semibold">Approved</p>
                    <p class="text-3xl font-bold text-green-900">@ViewBag.ApprovedCount</p>
                </div>
                <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
                    <p class="text-red-800 font-semibold">Rejected</p>
                    <p class="text-3xl font-bold text-red-900">@ViewBag.RejectedCount</p>
                </div>
            </div>
            <div class="mt-4 text-center">
                <p class="text-gray-600">Total Registrations: <strong class="text-gray-900">@ViewBag.TotalCount</strong></p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Register New Obstacle -->
                <a asp-action="RegisterType" class="block p-6 bg-blue-50 hover:bg-blue-100 border-2 border-blue-200 rounded-lg transition duration-150 ease-in-out">
                    <div class="flex items-center">
                        <svg class="w-12 h-12 text-blue-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Register New Obstacle</h3>
                            <p class="text-sm text-gray-600">Quick or full registration</p>
                        </div>
                    </div>
                </a>

                <!-- My Registrations -->
                <a asp-action="MyRegistrations" class="block p-6 bg-green-50 hover:bg-green-100 border-2 border-green-200 rounded-lg transition duration-150 ease-in-out">
                    <div class="flex items-center">
                        <svg class="w-12 h-12 text-green-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">My Registrations</h3>
                            <p class="text-sm text-gray-600">View and manage obstacles</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Information Cards -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Info Card 1 -->
                <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-yellow-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900">Quick Register</h3>
                            <p class="text-sm text-gray-700 mt-1">Save location now, add details later</p>
                        </div>
                    </div>
                </div>

                <!-- Info Card 2 -->
                <div class="bg-blue-50 p-4 rounded-lg border border-blue-200">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900">Approval Process</h3>
                            <p class="text-sm text-gray-700 mt-1">All obstacles need Registerfører approval</p>
                        </div>
                    </div>
                </div>

                <!-- Info Card 3 -->
                <div class="bg-green-50 p-4 rounded-lg border border-green-200">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-green-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900">Track Progress</h3>
                            <p class="text-sm text-gray-700 mt-1">Monitor status of your registrations</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 mb-3">Getting Started</h2>
            <ul class="space-y-2 text-sm text-gray-700">
                <li class="flex items-start">
                    <span class="text-blue-600 mr-2">1.</span>
                    <span>Click "Register New Obstacle" to start recording obstacles</span>
                </li>
                <li class="flex items-start">
                    <span class="text-blue-600 mr-2">2.</span>
                    <span>Choose Quick Register (location only) or Full Register (complete details)</span>
                </li>
                <li class="flex items-start">
                    <span class="text-blue-600 mr-2">3.</span>
                    <span>Complete any incomplete quick registrations in "My Registrations"</span>
                </li>
                <li class="flex items-start">
                    <span class="text-blue-600 mr-2">4.</span>
                    <span>Wait for Registerfører to approve your submissions</span>
                </li>
            </ul>
        </div>

        <!-- Logout -->
        <div class="mt-8 text-center">
            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                <button type="submit" class="text-red-600 hover:text-red-800 font-medium">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>
