@using System.Globalization
@using System.Security.Claims
@model FirstWebApplication.Models.Obstacle.ObstacleDetailsViewModel

@{
    ViewData["Title"] = "Obstacle Overview";
    var formattedHeight = Model.Height.ToString("F2");

    // Fallback hvis RegisteredBy er tom
    var registeredByDisplay = !string.IsNullOrEmpty(Model.RegisteredBy)
        ? Model.RegisteredBy
        : User.Identity?.Name ?? "Ukjent bruker";
}

<link rel="stylesheet" href="~/css/pilot/overview.css" />

<div class="container mx-auto px-4 py-8">
    @if (TempData["IsNewRegistration"] != null && (bool)TempData["IsNewRegistration"])
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <strong>Suksess!</strong> Hinderet er registrert og venter p√• godkjenning.
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    <h1 class="text-3xl font-bold text-gray-900 mb-6">Obstacle Details #@Model.Id</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 items-start">
        <div class="space-y-6">
            <div class="details-card">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Informasjon</h2>

                <div class="detail-row">
                    <div class="detail-label">ID:</div>
                    <div class="detail-value">#@Model.Id</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Status:</div>
                    <div class="detail-value">
                        @if (Model.IsApproved)
                        {
                            <span class="status-badge status-approved">Godkjent</span>
                        }
                        else if (Model.IsRejected)
                        {
                            <span class="status-badge status-rejected">Avvist</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Venter p√• svar</span>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Type))
                {
                    <div class="detail-row">
                        <div class="detail-label">Type:</div>
                        <div class="detail-value">@Model.Type</div>
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">H√∏yde:</div>
                    <div class="detail-value">@formattedHeight m</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Posisjonsdata:</div>
                    <div class="detail-value text-sm">
                        @{
                            if (!string.IsNullOrEmpty(Model.Location))
                            {
                                if (Model.Location.Contains("POINT"))
                                {
                                    var coords = Model.Location.Replace("POINT(", "").Replace(")", "").Split(' ');
                                    if (coords.Length == 2)
                                    {
                                        <div>üìç <strong>Punkt:</strong></div>
                                        <div>Lat: @double.Parse(coords[1], CultureInfo.InvariantCulture).ToString("F5")</div>
                                        <div>Lon: @double.Parse(coords[0], CultureInfo.InvariantCulture).ToString("F5")</div>
                                    }
                                }
                                else if (Model.Location.Contains("LINESTRING"))
                                {
                                    <div>üìè <strong>Linje-koordinater:</strong></div>
                                    <div class="max-h-40 overflow-y-auto bg-gray-50 p-2 rounded border mt-1">
                                        @{
                                            var raw = Model.Location.Replace("LINESTRING(", "").Replace(")", "");
                                            var pairs = raw.Split(',');
                                            int count = 1;
                                            foreach (var pair in pairs)
                                            {
                                                var parts = pair.Trim().Split(' ');
                                                if (parts.Length == 2)
                                                {
                                                    var lat = double.Parse(parts[1], CultureInfo.InvariantCulture);
                                                    var lon = double.Parse(parts[0], CultureInfo.InvariantCulture);
                                                    <div class="font-mono text-xs mb-1">
                                                        <span class="text-gray-500">Pt @count:</span> @lat.ToString("F5"), @lon.ToString("F5")
                                                    </div>
                                                    count++;
                                                }
                                            }
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <span>Ingen data</span>
                            }
                        }
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Beskrivelse:</div>
                    <div class="detail-value">@Model.Description</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Registrert av:</div>
                    <div class="detail-value">@registeredByDisplay</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Dato:</div>
                    <div class="detail-value">@Model.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
            </div>

            @if (Model.IsApproved && Model.ProcessedBy != null)
            {
                <div class="details-card bg-green-50">
                    <h2 class="text-2xl font-bold text-green-900 mb-4">Godkjenning</h2>
                    <div class="detail-row">
                        <div class="detail-label">Godkjent av:</div>
                        <div class="detail-value">@Model.ProcessedBy</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Dato:</div>
                        <div class="detail-value">@Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ProcessComments))
                    {
                        <div class="detail-row">
                            <div class="detail-label">Kommentar:</div>
                            <div class="detail-value">@Model.ProcessComments</div>
                        </div>
                    }
                </div>
            }

            @if (Model.IsRejected && Model.ProcessedBy != null)
            {
                <div class="details-card bg-red-50">
                    <h2 class="text-2xl font-bold text-red-900 mb-4">Avvisning</h2>
                    <div class="detail-row">
                        <div class="detail-label">Avvist av:</div>
                        <div class="detail-value">@Model.ProcessedBy</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Dato:</div>
                        <div class="detail-value">@Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">√Örsak:</div>
                        <div class="detail-value text-red-700 font-semibold">@Model.RejectionReason</div>
                    </div>
                </div>
            }
        </div>

        <div class="space-y-6">
            <div class="details-card">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Kartvisning</h2>
                <div id="map"
                     data-id="@Model.Id"
                     data-geometry="@Model.Location"
                     data-height="@formattedHeight"></div>
                <p class="text-xs text-gray-400 mt-2 font-mono break-all">Data: @Model.Location</p>
            </div>

            <div class="flex flex-col gap-4">
                <a asp-action="RegisterType" class="text-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                    Registrer nytt hinder
                </a>
                <a asp-action="MyRegistrations" class="text-center px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
                    Tilbake til oversikt
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var mapElement = document.getElementById('map');
            var geometry = mapElement.getAttribute('data-geometry');
            var id = mapElement.getAttribute('data-id'); // Henter ID i stedet
            var height = mapElement.getAttribute('data-height');

            var map = L.map('map').setView([60.4720, 8.4689], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            if (geometry) {
                var layer;
                if (geometry.startsWith('POINT')) {
                    var coords = geometry.replace('POINT(', '').replace(')', '').split(' ');
                    var lat = parseFloat(coords[1]);
                    var lng = parseFloat(coords[0]);
                    layer = L.marker([lat, lng]).addTo(map);
                    map.setView([lat, lng], 13);
                } else if (geometry.startsWith('LINESTRING')) {
                    // Enkel parsing av linje (samme som f√∏r)
                    var coordsStr = geometry.replace('LINESTRING(', '').replace(')', '');
                    var pairs = coordsStr.split(',');
                    var latlngs = pairs.map(function(pair) {
                        var p = pair.trim().split(' ');
                        return [parseFloat(p[1]), parseFloat(p[0])];
                    });
                    layer = L.polyline(latlngs, { color: 'blue' }).addTo(map);
                    map.fitBounds(layer.getBounds());
                }

                if (layer) {
                    // Bruker ID i popup i stedet for Navn
                    layer.bindPopup("<b>Obstacle #" + id + "</b><br>Height: " + height + "m").openPopup();
                }
            }
        });
    </script>
}