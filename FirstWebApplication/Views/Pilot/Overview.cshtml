@model FirstWebApplication.Models.Obstacle.ObstacleDetailsViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Obstacle Overview";
    var formattedHeight = Model.Height.ToString("F2");
}

<link rel="stylesheet" href="~/css/pilot/overview.css" />

<div class="container mx-auto px-4 py-8">
    @if (TempData["IsNewRegistration"] != null && (bool)TempData["IsNewRegistration"])
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <strong>Success!</strong> Your obstacle has been registered successfully and is now pending approval.
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    <h1 class="text-3xl font-bold text-gray-900 mb-6">Obstacle Details #@Model.Id</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 items-start">
        <!-- Left Column: Obstacle Info + Status Details -->
        <div class="space-y-6">
            <!-- Obstacle Information -->
            <div class="details-card">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Obstacle Information</h2>

                <div class="detail-row">
                    <div class="detail-label">ID:</div>
                    <div class="detail-value">#@Model.Id</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Status:</div>
                    <div class="detail-value">
                        @if (Model.IsApproved)
                        {
                            <span class="status-badge status-approved">Approved</span>
                        }
                        else if (Model.IsRejected)
                        {
                            <span class="status-badge status-rejected">Rejected</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pending Approval</span>
                        }
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Name:</div>
                    <div class="detail-value">@Model.Name</div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Type))
                {
                    <div class="detail-row">
                        <div class="detail-label">Type:</div>
                        <div class="detail-value">@Model.Type</div>
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">Height:</div>
                    <div class="detail-value">@formattedHeight m</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Location:</div>
                    <div class="detail-value">
                        @{
                            var coords = Model.Location?.Replace("POINT(", "").Replace(")", "").Split(' ');
                            var displayCoords = coords?.Length == 2
                                ? $"{double.Parse(coords[1], CultureInfo.InvariantCulture).ToString("F4")}, {double.Parse(coords[0], CultureInfo.InvariantCulture).ToString("F4")}"
                                : "N/A";
                        }
                        üìç @displayCoords
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Description:</div>
                    <div class="detail-value">@Model.Description</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Registered By:</div>
                    <div class="detail-value">@Model.RegisteredBy</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Registered Date:</div>
                    <div class="detail-value">@Model.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
            </div>

            @if (Model.IsApproved && Model.ProcessedBy != null)
            {
                <div class="details-card bg-green-50">
                    <h2 class="text-2xl font-bold text-green-900 mb-4">Approval Details</h2>
                    <div class="detail-row">
                        <div class="detail-label">Approved By:</div>
                        <div class="detail-value">@Model.ProcessedBy</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Approved Date:</div>
                        <div class="detail-value">@Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ProcessComments))
                    {
                        <div class="detail-row">
                            <div class="detail-label">Comments:</div>
                            <div class="detail-value">@Model.ProcessComments</div>
                        </div>
                    }
                </div>
            }

            @if (Model.IsRejected && Model.ProcessedBy != null)
            {
                <div class="details-card bg-red-50">
                    <h2 class="text-2xl font-bold text-red-900 mb-4">Rejection Details</h2>
                    <div class="detail-row">
                        <div class="detail-label">Rejected By:</div>
                        <div class="detail-value">@Model.ProcessedBy</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Rejected Date:</div>
                        <div class="detail-value">@Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Reason:</div>
                        <div class="detail-value text-red-700 font-semibold">@Model.RejectionReason</div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Map + Actions -->
        <div class="space-y-6">
            <!-- Map -->
            <div class="details-card">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Location</h2>
                <div id="map"
                     data-geometry="@Model.Location"
                     data-name="@Model.Name"
                     data-height="@formattedHeight"></div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col gap-4">
                <a asp-action="RegisterType" class="text-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                    Register Another Obstacle
                </a>
                <a asp-action="MyRegistrations" class="text-center px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
                    View All My Registrations
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>
    <script src="~/js/pilot/overview.js"></script>
}
