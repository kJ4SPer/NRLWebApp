@model IEnumerable<FirstWebApplication.Models.Obstacle.ObstacleListItemViewModel>

@{
    ViewData["Title"] = "Approved Obstacles";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Approved Obstacles</h1>
            <p class="text-gray-600 mt-2">View all approved obstacle registrations</p>
        </div>
        <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
            ‚Üê Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Location</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Height</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Approved By</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Approved Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var obstacle in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#@obstacle.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@obstacle.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @{
                                    var coords = obstacle.Location?.Replace("POINT(", "").Replace(")", "").Split(' ');
                                    var displayCoords = coords?.Length == 2
                                        ? $"{double.Parse(coords[1]).ToString("F4")}, {double.Parse(coords[0]).ToString("F4")}"
                                        : "N/A";
                                }
                                üìç @displayCoords
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@obstacle.Height m</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(obstacle.Type ?? "N/A")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@(obstacle.ProcessedBy ?? "N/A")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @(obstacle.ProcessedDate?.ToString("dd.MM.yyyy HH:mm") ?? "N/A")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a asp-action="ViewObstacle" asp-route-id="@obstacle.Id"
                                   class="text-indigo-600 hover:text-indigo-900">
                                    View Details ‚Üí
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <p class="text-gray-600 text-lg">No approved obstacles yet.</p>
        </div>
    }
</div>
