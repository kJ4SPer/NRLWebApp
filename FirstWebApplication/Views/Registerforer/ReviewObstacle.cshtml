@model FirstWebApplication.Models.Obstacle.ObstacleDetailsViewModel

@{
    ViewData["Title"] = "Review Obstacle";
    var formattedHeight = Model.Height.ToString("F2");
}

<style>
    #map {
        height: 500px;
        width: 100%;
        border-radius: 8px;
    }
</style>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Review Obstacle #@Model.Id</h1>
            <p class="text-gray-600 mt-2">Review and approve or reject this obstacle registration</p>
        </div>
        <a asp-action="PendingObstacles" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition">
            ‚Üê Back to Pending
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 items-start">
        <!-- Left Column: Obstacle Info + Map -->
        <div class="space-y-6">
            <!-- Obstacle Details -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Obstacle Information</h2>

                <div class="space-y-3">
                    <div class="flex justify-between py-2 border-b">
                        <span class="font-semibold text-gray-700">Name:</span>
                        <span class="text-gray-900">@Model.Name</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Type))
                    {
                        <div class="flex justify-between py-2 border-b">
                            <span class="font-semibold text-gray-700">Type:</span>
                            <span class="text-gray-900">@Model.Type</span>
                        </div>
                    }

                    <div class="flex justify-between py-2 border-b">
                        <span class="font-semibold text-gray-700">Height:</span>
                        <span class="text-gray-900">@formattedHeight m</span>
                    </div>

                    <div class="py-2 border-b">
                        <span class="font-semibold text-gray-700 block mb-2">Description:</span>
                        <p class="text-gray-900">@Model.Description</p>
                    </div>

                    <div class="flex justify-between py-2 border-b">
                        <span class="font-semibold text-gray-700">Registered By:</span>
                        <span class="text-gray-900">@Model.RegisteredBy</span>
                    </div>

                    <div class="flex justify-between py-2">
                        <span class="font-semibold text-gray-700">Registered Date:</span>
                        <span class="text-gray-900">@Model.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Location</h2>
                <div id="map"></div>
            </div>

            <!-- Status History -->
            @if (Model.StatusHistory != null && Model.StatusHistory.Any())
            {
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Status History</h2>
                    <div class="space-y-4">
                        @foreach (var history in Model.StatusHistory)
                        {
                            <div class="border-l-4 border-indigo-500 pl-4 py-2">
                                <div class="flex justify-between items-center">
                                    <span class="font-semibold text-gray-900">@history.Status</span>
                                    <span class="text-sm text-gray-600">@history.ChangedDate.ToString("dd.MM.yyyy HH:mm")</span>
                                </div>
                                <p class="text-sm text-gray-700">Changed by: @history.ChangedBy</p>
                                @if (!string.IsNullOrEmpty(history.Comments))
                                {
                                    <p class="text-sm text-gray-600 italic mt-1">@history.Comments</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Approve + Reject -->
        <div class="space-y-6">
            @if (Model.IsPending)
            {
                <!-- Approve Form -->
                <div class="bg-green-50 border border-green-200 rounded-lg shadow-md p-6">
                    <h2 class="text-2xl font-bold text-green-900 mb-4">Approve Obstacle</h2>
                    <form asp-action="ApproveObstacle" method="post">
                        <input type="hidden" name="ObstacleId" value="@Model.Id" />

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Comments (optional)
                            </label>
                            <textarea name="Comments" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Add any comments about this approval..."></textarea>
                        </div>

                        <button type="submit" class="w-full px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg transition" onclick="return confirm('Are you sure you want to approve this obstacle?');">
                            Approve This Obstacle
                        </button>
                    </form>
                </div>

                <!-- Reject Form -->
                <div class="bg-red-50 border border-red-200 rounded-lg shadow-md p-6">
                    <h2 class="text-2xl font-bold text-red-900 mb-4">Reject Obstacle</h2>
                    <form asp-action="RejectObstacle" method="post">
                        <input type="hidden" name="ObstacleId" value="@Model.Id" />

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Rejection Reason (required) *
                            </label>
                            <textarea name="RejectionReason" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="Explain why this obstacle is being rejected..." required></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Additional Comments (optional)
                            </label>
                            <textarea name="Comments" rows="2" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="Any additional information..."></textarea>
                        </div>

                        <button type="submit" class="w-full px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition" onclick="return confirm('Are you sure you want to reject this obstacle?');">
                            Reject This Obstacle
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                    <p class="text-yellow-800">
                        This obstacle has already been processed and cannot be approved or rejected again.
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var map = L.map('map').setView([60.4720, 8.4689], 6);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            var geometryWKT = '@Model.Location';
            
            if (geometryWKT) {
                try {
                    if (geometryWKT.startsWith('POINT')) {
                        var coords = geometryWKT.replace('POINT(', '').replace(')', '').split(' ');
                        var lat = parseFloat(coords[1]);
                        var lng = parseFloat(coords[0]);
                        
                        var marker = L.marker([lat, lng]).addTo(map);
                        marker.bindPopup('<b>@Model.Name</b><br>@formattedHeight m').openPopup();
                        map.setView([lat, lng], 13);
                    } else if (geometryWKT.startsWith('LINESTRING')) {
                        var coordsStr = geometryWKT.replace('LINESTRING(', '').replace(')', '');
                        var coordPairs = coordsStr.split(',');
                        var latlngs = coordPairs.map(pair => {
                            var coords = pair.trim().split(' ');
                            return [parseFloat(coords[1]), parseFloat(coords[0])];
                        });
                        
                        var polyline = L.polyline(latlngs, {color: 'blue'}).addTo(map);
                        polyline.bindPopup('<b>@Model.Name</b><br>@formattedHeight m');
                        map.fitBounds(polyline.getBounds());
                    } else if (geometryWKT.startsWith('POLYGON')) {
                        var coordsStr = geometryWKT.replace('POLYGON((', '').replace('))', '');
                        var coordPairs = coordsStr.split(',');
                        var latlngs = coordPairs.map(pair => {
                            var coords = pair.trim().split(' ');
                            return [parseFloat(coords[1]), parseFloat(coords[0])];
                        });
                        
                        var polygon = L.polygon(latlngs, {color: 'blue'}).addTo(map);
                        polygon.bindPopup('<b>@Model.Name</b><br>@formattedHeight m');
                        map.fitBounds(polygon.getBounds());
                    }
                } catch (e) {
                    console.error('Error parsing geometry:', e);
                }
            }
        });
    </script>
}
