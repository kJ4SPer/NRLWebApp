@model List<FirstWebApplication.Models.Obstacle.ObstacleListItemViewModel>


@{
    ViewData["Title"] = "All Obstacles";
    var currentStatus = ViewBag.CurrentStatus as string ?? "all";
    var currentSortBy = ViewBag.CurrentSortBy as string ?? "registereddate";
    var currentSortOrder = ViewBag.CurrentSortOrder as string ?? "desc";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">All Obstacles</h1>
        <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition">
            Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm font-medium">Total</p>
                    <p class="text-3xl font-bold text-gray-900">@Model.Count</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <span class="text-2xl">üìä</span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm font-medium">Approved</p>
                    <p class="text-3xl font-bold text-green-600">@Model.Count(o => o.IsApproved)</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <span class="text-2xl">‚úÖ</span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm font-medium">Pending</p>
                    <p class="text-3xl font-bold text-yellow-600">@Model.Count(o => o.IsPending)</p>
                </div>
                <div class="bg-yellow-100 rounded-full p-3">
                    <span class="text-2xl">‚è≥</span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-600 text-sm font-medium">Rejected</p>
                    <p class="text-3xl font-bold text-red-600">@Model.Count(o => o.IsRejected)</p>
                </div>
                <div class="bg-red-100 rounded-full p-3">
                    <span class="text-2xl">‚ùå</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Sorting - Reactive -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <form id="filterForm" method="get" asp-action="AllObstacles" class="flex flex-wrap gap-4 items-end">
            <!-- Status Filter -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Status</label>
                <select name="status" class="filter-select w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="all" selected="@(currentStatus == "all" ? "selected" : null)">All Statuses</option>
                    <option value="pending" selected="@(currentStatus == "pending" ? "selected" : null)">Pending</option>
                    <option value="approved" selected="@(currentStatus == "approved" ? "selected" : null)">Approved</option>
                    <option value="rejected" selected="@(currentStatus == "rejected" ? "selected" : null)">Rejected</option>
                </select>
            </div>

            <!-- Sort By -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
                <select name="sortBy" class="filter-select w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="registereddate" selected="@(currentSortBy == "registereddate" ? "selected" : null)">Registration Date</option>
                    <option value="name" selected="@(currentSortBy == "name" ? "selected" : null)">Name</option>
                    <option value="type" selected="@(currentSortBy == "type" ? "selected" : null)">Type</option>
                    <option value="height" selected="@(currentSortBy == "height" ? "selected" : null)">Height</option>
                    <option value="status" selected="@(currentSortBy == "status" ? "selected" : null)">Status</option>
                </select>
            </div>

            <!-- Sort Order -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-2">Order</label>
                <select name="sortOrder" class="filter-select w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="desc" selected="@(currentSortOrder == "desc" ? "selected" : null)">Newest First</option>
                    <option value="asc" selected="@(currentSortOrder == "asc" ? "selected" : null)">Oldest First</option>
                </select>
            </div>

            <!-- Reset Button -->
            <div>
                <a asp-action="AllObstacles" class="inline-block px-6 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition font-medium">
                    Reset
                </a>
            </div>
        </form>
    </div>

    <!-- Obstacles Cards Grid -->
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var obstacle in Model)
            {
                var borderColor = obstacle.IsApproved ? "border-green-500" :
                                  obstacle.IsPending ? "border-yellow-500" :
                                  obstacle.IsRejected ? "border-red-500" : "border-gray-300";
                var bgColor = obstacle.IsApproved ? "bg-green-50" :
                              obstacle.IsPending ? "bg-yellow-50" :
                              obstacle.IsRejected ? "bg-red-50" : "bg-gray-50";
                var headerBg = obstacle.IsApproved ? "bg-green-500" :
                               obstacle.IsPending ? "bg-yellow-500" :
                               obstacle.IsRejected ? "bg-red-500" : "bg-gray-500";
                var statusText = obstacle.IsApproved ? "Approved" :
                                 obstacle.IsPending ? "Pending" :
                                 obstacle.IsRejected ? "Rejected" : "Unknown";
                var statusIcon = obstacle.IsApproved ? "‚úÖ" :
                                 obstacle.IsPending ? "‚è≥" :
                                 obstacle.IsRejected ? "‚ùå" : "‚ùì";

                <div class="rounded-lg shadow-lg overflow-hidden border-l-4 @borderColor @bgColor hover:shadow-xl transition-shadow cursor-pointer">
                    <!-- Card Header with Status -->
                    <div class="@headerBg text-white px-4 py-3 flex justify-between items-center">
                        <span class="font-semibold">@statusIcon @statusText</span>
                        <span class="text-sm opacity-90">@obstacle.RegisteredDate.ToString("dd.MM.yyyy")</span>
                    </div>

                    <!-- Card Body -->
                    <div class="p-4">
                        <h3 class="text-lg font-bold text-gray-900 mb-3">@obstacle.Name</h3>

                        <div class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Type:</span>
                                <span class="font-medium text-gray-900">@(obstacle.Type ?? "Unknown")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Height:</span>
                                <span class="font-medium text-gray-900">@obstacle.Height.ToString("F2") m</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Registered by:</span>
                                <span class="font-medium text-gray-900">@obstacle.RegisteredBy</span>
                            </div>
                            @if (!string.IsNullOrEmpty(obstacle.ProcessedBy))
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Processed by:</span>
                                    <span class="font-medium text-gray-900">@obstacle.ProcessedBy</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Processed date:</span>
                                    <span class="font-medium text-gray-900">@obstacle.ProcessedDate?.ToString("dd.MM.yyyy")</span>
                                </div>
                            }
                        </div>

                        <!-- Card Action -->
                        <div class="mt-4 pt-3 border-t border-gray-200">
                            @if (obstacle.IsPending)
                            {
                                <a asp-action="ReviewObstacle" asp-route-id="@obstacle.Id"
                                   class="block w-full text-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium">
                                    Review
                                </a>
                            }
                            else
                            {
                                <a asp-action="ViewObstacle" asp-route-id="@obstacle.Id"
                                   class="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-medium">
                                    View Details
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <p class="text-gray-600 text-lg">No obstacles found matching your filters.</p>
            <a asp-action="AllObstacles" class="mt-4 inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                Show All Obstacles
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit form when any filter changes
        document.querySelectorAll('.filter-select').forEach(function(select) {
            select.addEventListener('change', function() {
                document.getElementById('filterForm').submit();
            });
        });
    </script>
}
