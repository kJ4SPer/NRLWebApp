@model List<FirstWebApplication.Models.Obstacle.ObstacleListItemViewModel>
@using FirstWebApplication.Helpers

@{
    ViewData["Title"] = "All Obstacles";
    var currentStatus = ViewBag.CurrentStatus as string ?? "all";
    var currentSortBy = ViewBag.CurrentSortBy as string ?? "registereddate";
    var currentSortOrder = ViewBag.CurrentSortOrder as string ?? "desc";
}

<div class="py-10 bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">All Obstacles</h1>
            <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 dark:bg-gray-700 dark:hover:bg-gray-600 text-white rounded-lg transition">
                Back to Dashboard
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 px-4 py-3 rounded mb-6">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 dark:text-gray-400 text-sm font-medium">Total</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white">@Model.Count</p>
                    </div>
                    <div class="bg-blue-100 dark:bg-blue-900/30 rounded-full p-3">
                        <span class="text-2xl">üìä</span>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 dark:text-gray-400 text-sm font-medium">Approved</p>
                        <p class="text-3xl font-bold text-green-600 dark:text-green-400">@Model.Count(o => o.IsApproved)</p>
                    </div>
                    <div class="bg-green-100 dark:bg-green-900/30 rounded-full p-3">
                        <span class="text-2xl">‚úÖ</span>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 dark:text-gray-400 text-sm font-medium">Pending</p>
                        <p class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">@Model.Count(o => o.IsPending)</p>
                    </div>
                    <div class="bg-yellow-100 dark:bg-yellow-900/30 rounded-full p-3">
                        <span class="text-2xl">‚è≥</span>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 dark:text-gray-400 text-sm font-medium">Rejected</p>
                        <p class="text-3xl font-bold text-red-600 dark:text-red-400">@Model.Count(o => o.IsRejected)</p>
                    </div>
                    <div class="bg-red-100 dark:bg-red-900/30 rounded-full p-3">
                        <span class="text-2xl">‚ùå</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6 border border-gray-200 dark:border-gray-700">
            <form id="filterForm" method="get" asp-action="AllObstacles" class="flex flex-wrap gap-4 items-end">
                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Filter by Status</label>
                    <select name="status" class="filter-select w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                        <option value="all" selected="@(currentStatus == "all" ? "selected" : null)">All Statuses</option>
                        <option value="pending" selected="@(currentStatus == "pending" ? "selected" : null)">Pending</option>
                        <option value="approved" selected="@(currentStatus == "approved" ? "selected" : null)">Approved</option>
                        <option value="rejected" selected="@(currentStatus == "rejected" ? "selected" : null)">Rejected</option>
                    </select>
                </div>

                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sort By</label>
                    <select name="sortBy" class="filter-select w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                        <option value="registereddate" selected="@(currentSortBy == "registereddate" ? "selected" : null)">Registration Date</option>
                        <option value="type" selected="@(currentSortBy == "type" ? "selected" : null)">Type</option>
                        <option value="height" selected="@(currentSortBy == "height" ? "selected" : null)">Height</option>
                        <option value="status" selected="@(currentSortBy == "status" ? "selected" : null)">Status</option>
                    </select>
                </div>

                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Order</label>
                    <select name="sortOrder" class="filter-select w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                        <option value="desc" selected="@(currentSortOrder == "desc" ? "selected" : null)">Newest First</option>
                        <option value="asc" selected="@(currentSortOrder == "asc" ? "selected" : null)">Oldest First</option>
                    </select>
                </div>

                @* FIKS: Lagt til eksplisitt "Apply" knapp for √• garantere innsending av skjemaet. *@
                <div class="flex gap-4 items-end">
                    <button type="submit" class="inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white rounded-lg transition font-medium">
                        Apply
                    </button>
                    <a asp-action="AllObstacles" class="inline-block px-6 py-2 bg-gray-500 hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-500 text-white rounded-lg transition font-medium">
                        Reset
                    </a>
                </div>
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2
                    lg:grid-cols-3 gap-6">
                @foreach (var obstacle in Model)
                {
                    // Dynamisk styling for Dark Mode
                    var borderColor = obstacle.IsApproved ? "border-green-500" :
                    obstacle.IsPending ? "border-yellow-500" :
                    obstacle.IsRejected ? "border-red-500" : "border-gray-300";

                    var bgColor = obstacle.IsApproved ? "bg-green-50 dark:bg-green-900/10" :
                    obstacle.IsPending ? "bg-yellow-50 dark:bg-yellow-900/10" :
                    obstacle.IsRejected ? "bg-red-50 dark:bg-red-900/10" : "bg-gray-50 dark:bg-gray-800";

                    var headerBg = obstacle.IsApproved ? "bg-green-500" :
                    obstacle.IsPending ? "bg-yellow-500" :
                    obstacle.IsRejected ? "bg-red-500" : "bg-gray-500";

                    var statusText = obstacle.IsApproved ? "Approved" :
                    obstacle.IsPending ? "Pending" :
                    obstacle.IsRejected ? "Rejected" : "Unknown";

                    var statusIcon = obstacle.IsApproved ? "‚úÖ" :
                    obstacle.IsPending ? "‚è≥" :
                    obstacle.IsRejected ? "‚ùå" : "‚ùì";

                    <div class="rounded-lg shadow-lg overflow-hidden border-l-4 @borderColor @bgColor hover:shadow-xl transition-shadow cursor-pointer dark:border-gray-700 bg-white dark:bg-gray-800">
                        <div class="@headerBg text-white px-4 py-3 flex justify-between items-center">
                            <span class="font-semibold">@statusIcon @statusText</span>
                            <span class="text-sm opacity-90">@obstacle.RegisteredDate.ToString("dd.MM.yyyy")</span>
                        </div>

                        <div class="p-4">
                            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3">Obstacle #@obstacle.Id</h3>

                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-600 dark:text-gray-400">Type:</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@(obstacle.Type ?? "Unknown")</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600 dark:text-gray-400">Height:</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@obstacle.Height.ToString("F2") m</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600 dark:text-gray-400">Location:</span>
                                    <span class="font-medium text-gray-900 dark:text-white">
                                        @{
                                            var coords = obstacle.Location?.Replace("POINT(", "").Replace(")", "").Split(' ');
                                            var displayCoords = coords?.Length == 2
                                            ? $"{double.Parse(coords[1]).ToString("F4")}, {double.Parse(coords[0]).ToString("F4")}"
                                            : "N/A";
                                        }
                                        üìç @displayCoords
                                    </span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600 dark:text-gray-400">Registered by:</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@obstacle.RegisteredBy</span>
                                </div>
                                @if (!string.IsNullOrEmpty(obstacle.ProcessedBy))
                                {
                                    <div class="flex justify-between">
                                        <span class="text-gray-600 dark:text-gray-400">Processed by:</span>
                                        <span class="font-medium text-gray-900 dark:text-white">@obstacle.ProcessedBy</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600 dark:text-gray-400">Processed date:</span>
                                        <span class="font-medium text-gray-900 dark:text-white">@obstacle.ProcessedDate?.ToString("dd.MM.yyyy")</span>
                                    </div>
                                }
                            </div>

                            <div class="mt-4 pt-3 border-t border-gray-200 dark:border-gray-700">
                                @if (obstacle.IsPending)
                                {
                                    <a asp-action="ReviewObstacle" asp-route-id="@obstacle.Id"
                                       class="block w-full text-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white rounded-lg transition font-medium">
                                        Review
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ViewObstacle" asp-route-id="@obstacle.Id"
                                       class="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white rounded-lg transition font-medium">
                                        View Details
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-8 text-center">
                <p class="text-gray-600 dark:text-gray-400 text-lg">No obstacles found matching your filters.</p>
                <a asp-action="AllObstacles" class="mt-4 inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                    Show All Obstacles
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @* FIKS: Lagt til @Html.NonceAttribute() for √• unng√• CSP-feil p√• inline script. *@
    <script @Html.NonceAttribute()>
        // Auto-submit form when any filter changes
        document.querySelectorAll('.filter-select').forEach(function(select) {
            select.addEventListener('change', function() {
                document.getElementById('filterForm').submit();
            });
        });
    </script>
}