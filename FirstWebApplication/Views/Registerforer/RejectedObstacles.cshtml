@model IEnumerable<FirstWebApplication.Models.Obstacle.ObstacleListItemViewModel>

@{
    ViewData["Title"] = "Rejected Obstacles";
}

<div class="py-10 bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Rejected Obstacles</h1>
                <p class="text-gray-600 dark:text-gray-400 mt-2">View all rejected obstacle registrations</p>
            </div>
            <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 dark:bg-gray-700 dark:hover:bg-gray-600 text-white rounded-lg transition">
                ‚Üê Back to Dashboard
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-200 dark:border-gray-700">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-100 dark:bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">Rejected By</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">Reason</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">Rejected Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var obstacle in Model)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">#@obstacle.Id</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                    @{
                                        var coords = obstacle.Location?.Replace("POINT(", "").Replace(")", "").Split(' ');
                                        var displayCoords = coords?.Length == 2
                                        ? $"{double.Parse(coords[1]).ToString("F4")}, {double.Parse(coords[0]).ToString("F4")}"
                                        : "N/A";
                                    }
                                    üìç @displayCoords
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">@(obstacle.ProcessedBy ?? "N/A")</td>
                                <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-300">
                                    @if (!string.IsNullOrEmpty(obstacle.RejectionReason))
                                    {
                                        <span class="line-clamp-2">@obstacle.RejectionReason</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">No reason provided</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                    @(obstacle.ProcessedDate?.ToString("dd.MM.yyyy HH:mm") ?? "N/A")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a asp-action="ViewObstacle" asp-route-id="@obstacle.Id"
                                       class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-200 font-bold">
                                        View Details ‚Üí
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-8 text-center">
                <p class="text-gray-600 dark:text-gray-400 text-lg">No rejected obstacles.</p>
            </div>
        }
    </div>
</div>