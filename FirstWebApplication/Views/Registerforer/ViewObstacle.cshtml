@using FirstWebApplication.Helpers

@model FirstWebApplication.Models.Obstacle.ObstacleDetailsViewModel

@{
    ViewData["Title"] = "View Obstacle";
    var formattedHeight = Model.Height.ToString("F2");
}

@section Head {
    <link rel="stylesheet" href="~/css/registerforer/view-obstacle.css" asp-append-version="true" />
}

<div class="py-10 bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Obstacle Details #@Model.Id</h1>
                <p class="text-gray-600 dark:text-gray-400 mt-2">View obstacle information</p>
            </div>
            <a asp-action="RegisterforerDashboard" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 dark:bg-gray-700 dark:hover:bg-gray-600 text-white rounded-lg transition">
                ← Back to Dashboard
            </a>
        </div>

        @if (Model.IsApproved)
        {
            <div class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-800 dark:text-green-300 px-4 py-3 rounded mb-6">
                <strong>✓ Approved</strong> by @Model.ProcessedBy on @Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")
                @if (!string.IsNullOrEmpty(Model.ProcessComments))
                {
                    <p class="mt-2"><strong>Comments:</strong> @Model.ProcessComments</p>
                }
            </div>
        }
        else if (Model.IsRejected)
        {
            <div class="bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-600 text-red-800 dark:text-red-300 px-4 py-3 rounded mb-6">
                <strong>✗ Rejected</strong> by @Model.ProcessedBy on @Model.ProcessedDate?.ToString("dd.MM.yyyy HH:mm")
                <p class="mt-2"><strong>Reason:</strong> @Model.RejectionReason</p>
                @if (!string.IsNullOrEmpty(Model.ProcessComments))
                {
                    <p class="mt-1"><strong>Comments:</strong> @Model.ProcessComments</p>
                }
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Obstacle Information</h2>

                <div class="space-y-3">
                    <div class="flex justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="font-semibold text-gray-700 dark:text-gray-300">Status:</span>
                        <span>
                            @if (Model.IsApproved)
                            {
                                <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold">Approved</span>
                            }
                            else if (Model.IsRejected)
                            {
                                <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-semibold">Rejected</span>
                            }
                            else
                            {
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">Pending</span>
                            }
                        </span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Type))
                    {
                        <div class="flex justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                            <span class="font-semibold text-gray-700 dark:text-gray-300">Type:</span>
                            <span class="text-gray-900 dark:text-white">@Model.Type</span>
                        </div>
                    }

                    <div class="flex justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="font-semibold text-gray-700 dark:text-gray-300">Height:</span>
                        <span class="text-gray-900 dark:text-white">@Model.Height m</span>
                    </div>

                    <div class="py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="font-semibold text-gray-700 dark:text-gray-300 block mb-2">Description:</span>
                        <p class="text-gray-900 dark:text-white">@Model.Description</p>
                    </div>

                    <div class="flex justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="font-semibold text-gray-700 dark:text-gray-300">Registered By:</span>
                        <span class="text-gray-900 dark:text-white">@Model.RegisteredBy</span>
                    </div>

                    <div class="flex justify-between py-2">
                        <span class="font-semibold text-gray-700 dark:text-gray-300">Registered Date:</span>
                        <span class="text-gray-900 dark:text-white">@Model.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Location</h2>
                <div id="map"></div>
            </div>
        </div>

        @if (Model.StatusHistory != null && Model.StatusHistory.Any())
        {
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-6 border border-gray-200 dark:border-gray-700">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Status History</h2>
                <div class="space-y-4">
                    @foreach (var history in Model.StatusHistory)
                    {
                        <div class="border-l-4 border-indigo-500 pl-4 py-2">
                            <div class="flex justify-between items-center">
                                <span class="font-semibold text-gray-900 dark:text-white">@history.Status</span>
                                <span class="text-sm text-gray-600 dark:text-gray-400">@history.ChangedDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            <p class="text-sm text-gray-700 dark:text-gray-300">Changed by: @history.ChangedBy</p>
                            @if (!string.IsNullOrEmpty(history.Comments))
                            {
                                <p class="text-sm text-gray-600 dark:text-gray-400 italic mt-1">@history.Comments</p>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>

    <script @Html.Raw(Html.NonceAttribute())>
        window.obstacleLocation = '@Model.Location';
        window.obstacleId = '@Model.Id'; // Sender med ID i stedet for navn
        window.obstacleHeight = '@Model.Height';
    </script>
    <script src="~/js/registerforer/view-obstacle.js" asp-append-version="true"></script>
}