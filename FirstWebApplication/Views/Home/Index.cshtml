@{
    ViewData["Title"] = "Welcome";
    Layout = null; // No layout - this is a standalone landing page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aviation Obstacle Registration</title>

    <!-- Leaflet CSS for the map -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Expo Task Tracker CSS -->
    <link rel="stylesheet" href="~/css/expo/task-tracker.css" asp-append-version="true" />

    <style @Html.Raw(Html.NonceAttribute())>
        /* Remove all margins and make the page full height */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow: hidden; /* Prevent scrolling */
        }

        /* Full-screen map container */
        #landing-map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1; /* Behind the overlay */
        }

        /* Dark overlay that covers the map - this makes it clear you can't use the map yet */
        .map-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent black */
            backdrop-filter: blur(3px); /* Blur effect */
            z-index: 1002; /* Above task tracker (1001) so modal is clickable */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* The auth modal box - used for both login and register */
        .auth-modal {
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            padding: 40px;
            width: 90%;
            max-width: 420px;
            z-index: 1; /* Relative to parent (map-overlay) */
            position: relative;
            transition: all 0.3s ease;
        }

            /* Style for the auth forms */
            .auth-modal h1 {
                font-size: 28px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 10px;
                text-align: center;
            }

            .auth-modal p {
                color: #6b7280;
                text-align: center;
                margin-bottom: 30px;
                font-size: 14px;
            }

            .auth-modal input {
                width: 100%;
                padding: 12px 15px;
                margin-bottom: 15px;
                border: 1px solid #d1d5db;
                border-radius: 8px;
                font-size: 14px;
                transition: border-color 0.3s ease;
            }

                .auth-modal input:focus {
                    outline: none;
                    border-color: #667eea;
                    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                }

            .auth-modal button {
                width: 100%;
                padding: 12px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

                .auth-modal button:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                }

                .auth-modal button:active {
                    transform: translateY(0);
                }

        /* Checkbox styling */
        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            font-size: 14px;
            color: #4b5563;
        }

            .remember-me input {
                width: auto;
                margin-right: 8px;
                margin-bottom: 0;
            }

        /* Link to toggle between login and register */
        .toggle-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #6b7280;
        }

            .toggle-link a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
                cursor: pointer;
            }

                .toggle-link a:hover {
                    text-decoration: underline;
                }

        /* Error message styling */
        .error-message {
            background-color: #fee;
            color: #c00;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 13px;
            text-align: center;
        }

        /* Logo/branding area */
        .branding {
            text-align: center;
            margin-bottom: 30px;
        }

            .branding .icon {
                font-size: 48px;
                margin-bottom: 10px;
            }

        /* Hide/show forms based on mode */
        .hidden {
            display: none;
        }

        /* Task tracker should be above the blur overlay */
        #expo-task-tracker {
            z-index: 1003; /* Above map-overlay (z-index: 1002) so it's not blurred and is clickable */
        }

        /* Allow clicks to pass through task tracker to auth modal in center */
        @@media (min-width: 769px) {
            #expo-task-tracker {
                pointer-events: none; /* Disable pointer events on container */
            }

            /* But enable pointer events on the actual tracker content */
            #expo-task-tracker > * {
                pointer-events: auto;
            }
        }
    </style>
</head>
<body>
    <!-- Full-screen map in the background -->
    <div id="landing-map"></div>

    <!-- Dark overlay with auth modal -->
    <div class="map-overlay">
        <div class="auth-modal">
            <!-- Branding/Icon -->
            <div class="branding">
                <div class="icon">✈️</div>
            </div>

            <!-- LOGIN FORM -->
            <div id="login-form" class="auth-form">
                <h1>Welcome</h1>
                <p>Sign in to access the Aviation Obstacle Registration System</p>

                <!-- Show error messages if login fails -->
                @if (ViewData.ModelState.ErrorCount > 0 && ViewBag.ShowRegister != true)
                {
                    <div class="error-message">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Login Form -->
                <form asp-controller="Account" asp-action="Login" method="post">
                    <!-- Email input -->
                    <input type="email"
                           name="Email"
                           placeholder="Email address"
                           required
                           autocomplete="email" />

                    <!-- Password input -->
                    <input type="password"
                           name="Password"
                           placeholder="Password"
                           required
                           autocomplete="current-password" />

                    <!-- Remember Me checkbox -->
                    <label class="remember-me">
                        <input type="checkbox" name="RememberMe" />
                        <span>Remember me</span>
                    </label>

                    <!-- Login button -->
                    <button type="submit">Sign In</button>
                </form>

                <!-- Link to toggle to registration -->
                <div class="toggle-link">
                    Don't have an account?
                    <a onclick="toggleForms()">Create one here</a>
                </div>
            </div>

            <!-- REGISTER FORM -->
            <div id="register-form" class="auth-form hidden">
                <h1>Create Account</h1>
                <p>Register to start reporting aviation obstacles</p>

                <!-- Show error messages if registration fails -->
                @if (ViewData.ModelState.ErrorCount > 0 && ViewBag.ShowRegister == true)
                {
                    <div class="error-message">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Register Form -->
                <form asp-controller="Account" asp-action="Register" method="post">
                    <!-- Email input -->
                    <input type="email"
                           name="Email"
                           placeholder="Email address"
                           required
                           autocomplete="email" />

                    <!-- Password input -->
                    <input type="password"
                           name="Password"
                           placeholder="Password (min 6 characters)"
                           required
                           autocomplete="new-password" />

                    <!-- Confirm Password input -->
                    <input type="password"
                           name="ConfirmPassword"
                           placeholder="Confirm Password"
                           required
                           autocomplete="new-password" />

                    <!-- Register button -->
                    <button type="submit">Create Account</button>
                </form>

                <!-- Link to toggle back to login -->
                <div class="toggle-link">
                    Already have an account?
                    <a onclick="toggleForms()">Sign in here</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Expo Task Tracker Sidebar -->
    <div id="expo-task-tracker">
        <button class="expo-toggle-btn" onclick="expoTracker?.toggleTracker()" title="Toggle task tracker">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>

        <div class="expo-tracker-header">
            <div class="expo-tracker-title">
                <span>🎯 Expo Test</span>
            </div>
            <div class="expo-tracker-subtitle">
                Fullfør alle oppgavene nedenfor
            </div>

            <div class="expo-progress-container">
                <div class="expo-progress-bar-bg">
                    <div id="expo-progress-bar" class="expo-progress-bar-fill" style="width: 0%"></div>
                </div>
                <div id="expo-progress-text" class="expo-progress-text">0% fullført</div>
            </div>
        </div>

        <div id="expo-task-list" class="expo-task-list">
            <!-- Tasks will be populated by JavaScript -->
            <div class="expo-tracker-loading">Loading tasks...</div>
        </div>
    </div>

    <!-- Leaflet JavaScript for the map -->
    <script src="~/lib/leaflet/leaflet.js"></script>

    <!-- Expo Task Tracker JS -->
    <script src="~/js/expo/task-tracker.js" asp-append-version="true"></script>

    <script @Html.Raw(Html.NonceAttribute())>
        // Initialize the map when the page loads
        document.addEventListener('DOMContentLoaded', function () {

            // Create the map centered on Norway
            // The map is set to not be interactive (dragging: false, etc.)
            var map = L.map('landing-map', {
                center: [60.4720, 8.4689], // Center of Norway
                zoom: 5,
                zoomControl: false,      // No zoom buttons
                dragging: false,          // Can't drag the map
                touchZoom: false,         // Can't zoom with touch
                scrollWheelZoom: false,   // Can't zoom with scroll wheel
                doubleClickZoom: false,   // Can't zoom with double click
                boxZoom: false,           // Can't zoom with box select
                keyboard: false           // Can't use keyboard to navigate
            });

            // Add the OpenStreetMap tiles (the actual map images)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Check if we should show the register form (after failed registration)
            @if (ViewBag.ShowRegister == true)
            {
                    <text>
                    toggleForms();
                    </text>
            }
        });

        // Function to toggle between login and register forms
        function toggleForms() {
            var loginForm = document.getElementById('login-form');
            var registerForm = document.getElementById('register-form');

            // Toggle visibility
            loginForm.classList.toggle('hidden');
            registerForm.classList.toggle('hidden');
        }
    </script>
</body>
</html>