@{
    ViewData["Title"] = "Expo Demo";
    Layout = null; // Standalone landing page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aviation Obstacle Registration</title>

    <!-- Leaflet CSS for the map -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style @Html.Raw(Html.NonceAttribute())>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow-x: hidden;
            background: white;
        }

        /* Main container */
        .main-container {
            min-height: 100vh;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }

        /* Role selection container */
        .role-selection-container {
            display: flex;
            gap: 40px;
            max-width: 1000px;
            width: 100%;
            justify-content: center;
            align-items: stretch;
        }

        /* Individual role box */
        .role-box {
            background: white;
            border-radius: 24px;
            padding: 50px 40px;
            flex: 1;
            min-width: 400px;
            max-width: 480px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
        }

        .role-box:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        }

        .role-box.pilot {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(79, 70, 229, 0.1) 100%);
            border: 3px solid #8b5cf6;
        }

        .role-box.registerforer {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
            border: 3px solid #10b981;
        }

        .role-icon {
            font-size: 72px;
            margin-bottom: 20px;
        }

        .role-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 15px;
            color: #1f2937;
        }

        .role-box.pilot .role-title {
            color: #7c3aed;
        }

        .role-box.registerforer .role-title {
            color: #059669;
        }

        .role-description {
            font-size: 16px;
            color: #6b7280;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .role-button {
            padding: 16px 40px;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
            color: white;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .role-box.pilot .role-button {
            background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%);
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4);
        }

        .role-box.pilot .role-button:hover {
            background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
            box-shadow: 0 6px 16px rgba(139, 92, 246, 0.5);
        }

        .role-box.registerforer .role-button {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }

        .role-box.registerforer .role-button:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            box-shadow: 0 6px 16px rgba(16, 185, 129, 0.5);
        }

        /* Header branding */
        .header-branding {
            text-align: center;
            margin-bottom: 60px;
        }

        .header-title {
            font-size: 42px;
            font-weight: 800;
            color: #1f2937;
            margin-bottom: 12px;
        }

        .header-subtitle {
            font-size: 18px;
            color: #6b7280;
        }

        /* Responsive design */
        @@media (max-width: 968px) {
            .role-selection-container {
                flex-direction: column;
                gap: 30px;
                align-items: center;
            }

            .role-box {
                max-width: 500px;
                min-width: 0;
            }
        }

        @@media (max-width: 768px) {
            .role-box {
                padding: 40px 30px;
            }

            .role-icon {
                font-size: 56px;
            }

            .role-title {
                font-size: 26px;
            }

            .role-description {
                font-size: 14px;
            }

            .header-title {
                font-size: 32px;
            }

            .header-subtitle {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <!-- Main container with white background -->
    <div class="main-container">
        <!-- Header branding -->
        <div class="header-branding">
            <h1 class="header-title">Expo Demo - Velg din rolle</h1>
            <p class="header-subtitle">Test systemet som Pilot eller Registerf√∏rer</p>
        </div>

        <!-- Role selection container -->
        <div class="role-selection-container">
            <!-- Pilot Role Box -->
            <a href="@Url.Action("ExpoDemo", "Pilot", new { role = "pilot" })" class="role-box pilot">
                <div class="role-icon">‚úàÔ∏è</div>
                <h2 class="role-title">Test som Pilot</h2>
                <p class="role-description">
                    Opplev hvordan piloter registrerer luftfartshindringer med Quick Register og Full Register.
                </p>
                <button class="role-button">Start Pilot Test</button>
            </a>

            <!-- Registerf√∏rer Role Box -->
            <a href="@Url.Action("ExpoDemo", "Registerforer", new { role = "registerforer" })" class="role-box registerforer">
                <div class="role-icon">üìã</div>
                <h2 class="role-title">Test som Registerf√∏rer</h2>
                <p class="role-description">
                    Se hvordan Registerf√∏rere behandler, godkjenner og administrerer innsendte hindringer.
                </p>
                <button class="role-button">Start Registerf√∏rer Test</button>
            </a>
        </div>
    </div>
</body>
</html>
