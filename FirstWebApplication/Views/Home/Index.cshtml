@using Microsoft.AspNetCore.Identity
@using FirstWebApplication.Entities
@using FirstWebApplication.Helpers
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Velkommen";
}

@* --- CSS: KART, LAYOUT OG DESIGN --- *@
<style nonce="@Html.GetNonce()">
    /* 1. Skjul standard navbar og footer */
    header, footer, .border-top.footer {
        display: none !important;
    }

    /* Forhindre scrolling på selve body */
    body {
        overflow: hidden;
    }

    /* 2. Bakgrunnskart */
    #map-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -2;
        filter: grayscale(20%);
    }

    /* 3. Mørk overlay */
    #map-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: rgba(33, 37, 41, 0.75);
        pointer-events: none;
    }

    /* 4. Hovedcontainer */
    .landing-container {
        height: 100vh;
        width: 100%;
        overflow-y: auto; /* Tillat scroll hvis skjermen er liten */
        padding-top: 5vh;
        padding-bottom: 50px;
    }

    /* 5. HERO TEKST */
    .hero-section {
        margin-bottom: 3rem;
        text-align: center;
        color: white;
    }

    .hero-title {
        font-weight: 800;
        text-transform: uppercase;
    }

    .hero-subtitle {
        font-weight: 400;
        opacity: 0.9;
        margin-top: 10px;
    }

    .hero-divider {
        width: 100px;
        height: 5px;
        background-color: #fff;
        margin: 20px auto;
        border-radius: 2px;
    }

    /* 6. Kort-design - HØYERE OG SMALERE */
    .action-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.2s;
        min-height: 350px; 
        display: flex;
        flex-direction: column;
        justify-content: center; 
    }

        .action-card:hover {
            transform: scale(1.02);
        }

    /* 7. Privacy link */
    .privacy-link-container {
        margin-top: auto;
        padding-top: 30px;
        text-align: center;
        width: 100%;
        padding-bottom: 20px;
    }

    .privacy-link {
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
    }

        .privacy-link:hover {
            color: white;
            text-decoration: underline;
        }
</style>

@* --- HTML STRUKTUR --- *@

<div id="map-background"></div>
<div id="map-overlay"></div>

<div class="landing-container">

    @* OVERSKRIFT *@
    <div class="hero-section container">
        <h1 class="display-3 hero-title">Nasjonalt Register<br />for Luftfartshindre</h1>
        <div class="hero-divider"></div>
        <h2 class="h2 hero-subtitle">Sikker rapportering og forvaltning</h2>
    </div>

    @* HOVEDINNHOLD *@
    <div class="container d-flex flex-column align-items-center">

        @if (SignInManager.IsSignedIn(User))
        {
            /* --- VISNING FOR INNLOGGET BRUKER --- */
            /* Endret fra col-lg-7 til col-lg-5 for å gjøre den smalere */
            <div class="col-12 col-md-8 col-lg-5 mb-4">
                <div class="card action-card shadow-lg p-4">
                    <div class="card-body text-center">
                        <h2 class="text-success mb-3 fw-bold">Velkommen tilbake!</h2>
                        <p class="fs-4 mb-4 text-muted">Innlogget som <strong>@UserManager.GetUserName(User)</strong></p>

                        <div class="d-grid gap-3">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-primary btn-lg py-4 fs-3 fw-bold">Gå til Admin Dashboard</a>
                            }
                            else if (User.IsInRole("Registerfører"))
                            {
                                <a asp-controller="Registerforer" asp-action="RegisterforerDashboard" class="btn btn-primary btn-lg py-4 fs-3 fw-bold">Gå til Registerfører Dashboard</a>
                            }
                            else
                            {
                                <a asp-controller="Pilot" asp-action="RegisterType" class="btn btn-primary btn-lg py-4 fs-3 fw-bold">Registrer nytt hinder</a>
                                <a asp-controller="Pilot" asp-action="MyRegistrations" class="btn btn-outline-secondary btn-lg py-3 fs-4">Mine registreringer</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            /* --- VISNING FOR GJEST --- */

            @* LOGG INN BOKS *@
            /* Endret fra col-lg-7 til col-lg-5 for å gjøre den smalere */
            <div class="col-12 col-md-8 col-lg-5 mb-4">
                <div class="card action-card shadow-lg">
                    <div class="card-body p-5 text-center">
                        <h2 class="card-title fw-bold mb-3 display-6">Logg inn</h2>
                        <p class="text-muted fs-5 mb-5">Har du allerede en bruker?</p>

                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary w-100 fw-bold py-4 fs-3 stretched-link">
                            Logg inn
                        </a>
                    </div>
                </div>
            </div>

            @* REGISTRER BOKS *@
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card action-card shadow-lg" style="background-color: rgba(255, 255, 255, 0.95);">
                    <div class="card-body p-5 text-center">
                        <h2 class="card-title fw-bold mb-3 display-6">Ny bruker?</h2>
                        <p class="text-muted fs-5 mb-5">Opprett tilgang til registeret</p>

                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-100 fw-bold py-4 fs-3 stretched-link">
                            Registrer deg
                        </a>
                    </div>
                </div>
            </div>
        }

        @* FLYTENDE PRIVACY LINK *@
        <div class="privacy-link-container">
            <a asp-controller="Home" asp-action="Privacy" class="privacy-link">Personvernerklæring</a>
        </div>

    </div>
</div>

@* --- SCRIPT FOR KART --- *@
@section Scripts {
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <script src="~/lib/leaflet/leaflet.js"></script>

    <script nonce="@Html.GetNonce()">
        document.addEventListener("DOMContentLoaded", function () {
            var map = L.map('map-background', {
                zoomControl: false,
                scrollWheelZoom: false,
                doubleClickZoom: false,
                dragging: false,
                attributionControl: false,
                keyboard: false
            }).setView([59.9139, 10.7522], 12);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19
            }).addTo(map);
        });
    </script>
}